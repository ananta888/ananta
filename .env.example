# Docker Compose environment variables
# Copy this file to .env and adjust as needed

# Cross-platform path resolution for Git Bash / MSYS on Windows
# Set to 1 if you encounter 'invalid volume specification' errors in Git Bash
COMPOSE_CONVERT_WINDOWS_PATHS=0

# Port Configuration
HUB_PORT=5000
ALPHA_PORT=5001
BETA_PORT=5002
LMSTUDIO_PROXY_PORT=12340
FRONTEND_PORT=4200

# Database Configuration
POSTGRES_USER=ananta
POSTGRES_PASSWORD=ananta_change_me
POSTGRES_DB=ananta

# Grafana Configuration
GRAFANA_PASSWORD=admin_change_me

# Service URLs
LMSTUDIO_URL=http://host.docker.internal:1234/v1
OLLAMA_URL=http://host.docker.internal:11434/api/generate

# AI Agent Configuration
# IMPORTANT: Change these tokens for production use!
AGENT_TOKEN_HUB=hub_token_change_me
AGENT_TOKEN_ALPHA=alpha_token_change_me
AGENT_TOKEN_BETA=beta_token_change_me

