# Ananta Environment Variables Template
# Copy this file to .env and adjust the values

# Agent Basic Config
AGENT_NAME=ananta-agent-1
AGENT_TOKEN=your-secret-agent-token-here
PORT=5000
ROLE=worker
# AGENT_URL=http://localhost:5000

# Hub / Controller
HUB_URL=http://localhost:8081

# LLM Providers
DEFAULT_PROVIDER=ollama
DEFAULT_MODEL=llama3
OLLAMA_URL=http://localhost:11434/api/generate
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# Security
# SECRET_KEY= (will be generated and persisted in secrets/secret_key if not set)
# MFA_ENCRYPTION_KEY= (optional, will fall back to hash of SECRET_KEY if not set)
CORS_ORIGINS=*
# REGISTRATION_TOKEN=secure_token_for_new_agents

# Database
# DATABASE_URL=sqlite:///data/ananta.db
# DATABASE_URL=postgresql://user:password@localhost:5432/ananta

# Redis
# REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
AI_AGENT_LOG_JSON=false
