# Docker Compose environment variables
# Copy this file to .env and adjust as needed

# Cross-platform path resolution for Git Bash / MSYS on Windows
# Set to 1 if you encounter 'invalid volume specification' errors in Git Bash
COMPOSE_CONVERT_WINDOWS_PATHS=0

# Port Configuration
HUB_PORT=5000
ALPHA_PORT=5001
BETA_PORT=5002
LMSTUDIO_PROXY_PORT=12340
FRONTEND_PORT=4200

# Database Configuration
POSTGRES_USER=ananta
POSTGRES_PASSWORD=ananta
POSTGRES_DB=ananta

# Service URLs
LMSTUDIO_URL=http://host.docker.internal:1234/v1
OLLAMA_URL=http://host.docker.internal:11434/api/generate

# AI Agent Configuration
AGENT_TOKEN_HUB=hubsecret
AGENT_TOKEN_ALPHA=secret1
AGENT_TOKEN_BETA=secret2
