# --- Datenbank (PostgreSQL) ---
POSTGRES_USER=ananta
POSTGRES_PASSWORD=
POSTGRES_DB=ananta
POSTGRES_PORT=5432

# --- Redis ---
REDIS_PORT=6379

# --- Monitoring (Grafana) ---
GRAFANA_PORT=3000
GRAFANA_PASSWORD=
